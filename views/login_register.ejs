  <body class="text-center">
    <% if(login_register){ %>
      <form class="form-signin" method="POST" action="/login">
    <% } else{ %>
      <form class="form-signin" method="POST" action="/register">
    <% } %>
      <img class="mb-4" src="/assets/bootstrap-solid.svg" alt="" width="72" height="72">
      <h1 class="h3 mb-3 font-weight-normal">
        <% if(login_register){ %>
          Please sign in
          <br>
        <% } else{ %>
          Welcome to Enroll
          <% if(password_confirm){ %>
            <br>
          <% } else{ %>
            <div class="alert alert-danger text-left" role="alert">
              <h6><b>Errors</b>:
              <li>Passwords not match. Please check that you've entered the same password twice</li>
              </h6>
            </div>
          <% } %>
        <% } %>
      </h1>
      <label for="inputEmail" class="sr-only">Email address</label>
      <input type="email" name = "email" class="form-control" placeholder="Email address" required autofocus>
      <% if(login_register){ %>
        <label for="inputPassword" class="sr-only">Password</label>
        <input type="password" name = "password" id="inputPassword" class="form-control" placeholder="Password" required>
        <br>
          <!--
          <div class="checkbox mb-3; text-left" >
            <label>
              <input type="checkbox" value="remember-me"> Remember me
            </label>
          </div>
          <br>
          -->
        <button class="btn btn-lg btn-info btn-block" type="submit">Sign in</button>
      <% } else{ %>
        <br>
        <label for="inputPassword" class="sr-only">Password</label>
        <input type="password" name = "password" class="form-control" placeholder="Password" required>
        <label for="confirmPassword" class="sr-only">Confirm password</label>
        <input type="password" name = "confirm_password" class="form-control" placeholder="Confirm Your Password" required>
        <br>
        <button class="btn btn-lg btn-info btn-block" type="submit">Create Account</button>
      <% } %>
