<!-- views/partials/_header.ejs -->

<h1><b>Tiny App</b></h1>

<h5>User Name:</h5>

  <% if(username){ %>

    <form method="POST" action="/logout">
      <h3><%= username%></h3>
      <button type="logout" class="btn btn-primary">Logout</button>
    </form>

  <% } else{ %>

    <form method="POST" action="/login">
      <input class="form-control" type="text" name="userName" placeholder="" style="width: 300px; margin: 1em">
      <button type="login" class="btn btn-primary">Login</button>
    </form>

  <% } %>

<br>